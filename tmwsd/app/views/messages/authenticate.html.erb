<% if @error %>
  <div class="flash-display">
    <span><%= @error %></span>
  </div>
<% end %>

<%= form_for(@message, url: verify_password_path, method: "post", :html => {:class => "form-horizontal center"}) do |f| %>
    <div class="form-group">
      <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :password, type: "password", class: "form-control" %>
      </div>
    </div>
      <%= f.submit "RETRIEVE MESSAGE", class: "btn btn-default btn-primary" %>  
 <% end %>